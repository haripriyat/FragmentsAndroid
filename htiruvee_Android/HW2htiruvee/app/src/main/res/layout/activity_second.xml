<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hw2htiruvee.cmu.edu.hw2htiruvee.SecondActivity">

    <LinearLayout android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="5dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:imeOptions="actionNext">
        </EditText>

        <EditText
            android:id="@+id/dateTimEditText"
            android:hint="When, otherwise today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext">
        </EditText>

        <EditText android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:hint="When,otherwise current location"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone">
        </EditText>

        <Button android:id="@+id/saveEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Save">

        </Button>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
